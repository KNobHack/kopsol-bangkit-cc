{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": false,
		"baseUrl": ".",
		"types": [
			// "webpack-env",
			// "jest"
		],
		"paths": {
			"@/*": [
				"resources/js/src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"resolveJsonModule": true,
		"strictNullChecks": false,
		"noEmit": true
	},
	"include": [
		"resources/js/src/**/*.ts",
		"resources/js/src/**/*.tsx",
		"resources/js/src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}